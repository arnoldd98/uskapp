<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/subject_container_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".SubjectActivity">

        <TextView
            android:id="@+id/subject_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:text="TextView"
            android:fontFamily="@font/nunitosans_semibold"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toStartOf="@+id/subjectView"
            app:layout_constraintTop_toTopOf="@+id/subjectView" />

        <Button
            android:id="@+id/subjectView"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>